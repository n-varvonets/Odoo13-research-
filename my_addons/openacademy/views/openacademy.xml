<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--    FOR CLASS COURSE IN models.py -->

    <!--    Create your own form view for the Course object. это уже та таблица, которая отображается после нажатия на курс, в которой можно добавлять табы -->
    <record model="ir.ui.view" id="course_form_view">
        <field name="name">course.form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="Course Form(123)">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="responsible_id"/><!--   http://i.imgur.com/ceJC9TG.png-->
                    </group>
                    <!-- наши табы внутри формы http://i.imgur.com/cvKfhHt.png-->
                    <notebook>
                        <page string="Description">
                            и внутри помещаем значение >field name="description"/>
                            <field name="description"/>
                        </page>
                        <page string="About">
                            This is an example of notebooks
                        </page>
                        <page string="Sessions(in form of class Course with specify fields session_ids)">
                            <field name="session_ids"> <!-- мы можем обращаться с формы курса к полям сессии(seats) т.к. мы юзаем М21-->
                                <tree string="Registered sessions">
                                    <field name="name"/>
                                    <field name="instructor_id"/>
                                    <field name="seats"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--    то как будет отображаться основная форма вкладки курсов академии http://i.imgur.com/9Ep0L2W.png-->
    <record model="ir.ui.view" id="course_tree_view">
        <field name="name">course.tree</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree string="Course Tree">
                <field name="name"/>
                <field name="description"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>

    <!--    search view for form course. поиск на основной страннице по двум категориям http://i.imgur.com/EaYrJ4S.png-->
    <record model="ir.ui.view" id="course_search_view">
        <field name="name">course.search</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <field name="responsible_id"/>
                <filter name="my_courses" string="My Courses(tab in filter)"
                        domain="[('responsible_id', '=', uid)]"/>
                <!--проверяет что текущий пользователь(uid) является и ответственным за просмотр курса http://i.imgur.com/bQyLHxD.png -->
                <group string="Group By">
                    <filter name="by_responsible" string="Responsible(tab in group)"
                            context="{'group_by': 'responsible_id'}"/>
                    <!--                    групирует по ответсвенным с res.partners http://i.imgur.com/bonQbu2.png-->
                </group>
            </search>
        </field>
    </record>


    <!-- window action -->
    <!--
        The following tag is an action definition for a "window action",
        that is an action opening a view or a set of views
    -->

    <!--    это то, как будет отображаться основная таблица https://i.imgur.com/IL1g7gR.png -->
    <record model="ir.actions.act_window" id="course_list_action">
        <field name="name">Courses(title of all table)</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
        <!--        последовательность иммет значение(что раньше, так и раньше будет отображаться).. +  без формы не
        будет переходит при нажатии на курс на другую страницу  так выглядит форма - http://i.imgur.com/MHwH8hY.png,
             http://i.imgur.com/MHwH8hY.png,  а вот так три - http://i.imgur.com/vXbG7pC.png-->
        <field name="context" eval="{'search_default_my_courses': 1}"/>
        <!--        Add a button to group courses by responsible user(http://i.imgur.com/EcAj4Sa.png) по умолчанию http://i.imgur.com/keBhnGR.png -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first course(Where are u?)
            </p>
        </field>
    </record>

    <!-- top level menu: no parent -->
    <menuitem id="main_openacademy_menu" name="Open Academy(main)"
              groups="group_openacademy_manager"/>
    <!-- A first level in the left side menu is needed
         before using action= attribute -->
    <menuitem id="openacademy_menu" name="Open Academy(tab)"
              groups="group_openacademy_manager"
              parent="main_openacademy_menu"/>
    <!-- the following menuitem should appear *after*
         its parent openacademy_menu and *after* its
         action course_list_action -->
    <menuitem id="courses_menu" name="Courses(pod.tab)" parent="openacademy_menu"
              groups="group_openacademy_manager"
              action="course_list_action"/>
    <!-- Full id location:
         action="openacademy.course_list_action"
         It is not required when it is the same module -->


    <!--    FOR CLASS SESSION IN models.py -->

    <!-- session form view -->
    <record model="ir.ui.view" id="session_form_view">
        <field name="name">session.form</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <form string="Session Form">
                <sheet>

                    <!-- таблица в форме отображается по группам к примеру http://i.imgur.com/gNH3rHX.png-->
                    <!--                    <group>-->
                    <!--                        <field name="name"/>-->
                    <!--                        <field name="start_date"/>-->
                    <!--                        <field name="duration"/>-->
                    <!--                        <field name="seats"/>-->
                    <!--                    </group>-->

                    <!--                    сейчас же будет отображаться две группы -->
                    <group string="General(first group in form of session)">
                        <field name="course_id"/>
                        <field name="name"/>
                        <field name="instructor_id"/>
                        <field name="active"/>
                    </group>
                    <group string="Schedule(2nd group in form of session)">
                        <field name="start_date"/>
                        <field name="duration"/>
                        <field name="seats"/>
                        <field name="taken_seats"
                               widget="progressbar"/><!--widget="progressbar" - то как будет отображаеться поле http://i.imgur.com/0tQbhjx.png-->
                    </group>
                    <!-- так выглядит лейбл на сайте - http://i.imgur.com/M59Xv6G.png-->
                    <label for="attendee_ids"/>
                    <field name="attendee_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <!--    превью(наше три сессиии)-->
    <record model="ir.ui.view" id="session_tree_view">
        <field name="name">session.tree</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <tree string="Session Tree" decoration-info="duration&lt;5" decoration-bf="duration==6"
                  decoration-it="duration==14" decoration-warning="duration==15" decoration-danger="duration&gt;16">
                <!--      http://i.imgur.com/e1Zf2yG.png        -->
                <field name="name"/>
                <field name="course_id"/>
                <field name="duration" invisible="1"/>
                <field name="taken_seats" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <!-- calendar view  http://i.imgur.com/Z9szPoa.png -->
    <record model="ir.ui.view" id="session_calendar_view">
        <field name="name">session.calendar</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <calendar string="Session Calendar" date_start="start_date" date_stop="end_date" color="instructor_id">
                <!--                    колор - оду автоматичски подставит свой цвет каждому новому инструтору-->
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="session_gantt_view">
        <field name="name">session.gantt</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <gantt string="Session Gantt"
                   date_start="start_date" date_stop="end_date"
                   default_group_by='instructor_id'>
            </gantt>
        </field>
    </record>

    <record model="ir.ui.view" id="openacademy_session_pivot_view">
        <field name="name">openacademy.session.pivot</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <pivot string="Participations by Courses">
                <field name="course_id" type="row"/>
                <field name="attendees_count" type="col"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="openacademy_session_graph_view">
        <field name="name">openacademy.session.graph</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <graph string="Participations by Courses">
                <field name="course_id"/>
                <field name="attendees_count" type="measure"/>
            </graph>
        </field>
    </record>
    <record model="ir.ui.view" id="view_openacad_session_kanban">
        <field name="name">openacademy.session.kanban</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <kanban default_group_by="course_id"><!-- указываем по какому дефолтному полю будем групировать-->
                <field name="color"/>
                <templates>
<!--                    дальше блок идет для определения различных стилей-->
                    <t t-name="kanban-box">
                        <div
                                t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                            <div class="oe_dropdown_kanban">
                                <!-- dropdown menu -->
                                <div class="oe_dropdown_toggle">
                                    <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                    <ul class="oe_dropdown_menu">
                                        <li>
                                            <a type="delete">Delete</a>
                                        </li>
                                        <li>
                                            <ul class="oe_kanban_colorpicker"
                                                data-field="color"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
<!--                            вот сейчас уже пошел контент, который нужно вставить в логику отображения канбана-->
                            <div t-attf-class="oe_kanban_content">
                                <!-- title -->
                                Session name(канбан1):
                                <field name="name"/>
                                <br/>
                                Start date(канбан2):
                                <field name="start_date"/>
                                <br/>
                                duration(канбан3):
                                <field name="duration"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!--    то как будет выглядит таблица сессии-->
    <record model="ir.actions.act_window" id="session_list_action">
        <field name="name">Sessions(name of whole table)</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_mode">tree,form,calendar,gantt,graph,pivot,kanban</field>
    </record>

    <menuitem id="session_menu" name="Sessions(pod.tab in menu)"
              parent="openacademy_menu"
              groups="group_openacademy_manager"
              action="session_list_action"/>

</odoo>