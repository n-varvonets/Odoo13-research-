<odoo>

    <record id="action_academy_teachers" model="ir.actions.act_window">
        <field name="name">Academy teachers</field>
        <field name="res_model">academy.teachers</field>
    </record>
    <record id="action_academy_courses" model="ir.actions.act_window">
        <field name="name">Academy courses</field>
        <field name="res_model">academy.courses</field>
    </record>

    <record id="academy_teacher_form" model="ir.ui.view">
        <field name="name">Academy __ teachers: form</field>
        <field name="model">academy.teachers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <p>(before label for name)</p><bold><label for="name"/></bold><p>(after label for name)</p>
                    <p>(before field name)</p><bold><field name="name"/></bold><p>(after field name)</p>
                    <p>(before label for biography)</p><bold><label for="biography"/></bold><p>(after label for biography)</p>
                    <p>(before field biography)</p><bold><field name="biography"/></bold><p>(after field biography)</p>
                    <p>------------------------------------------------</p>
                    <label for="name"/>
                    <field name="name"/>
                    <br/>
                    <label for="biography"/>
                    <field name="biography"/>
                    <!--Также должна быть возможность создавать новые курсы прямо со страницы учителя или видеть -->
                    <!--все курсы, которые они преподают, поэтому добавьте обратную зависимость к модели учителя:-->
                    <!-- но что-то идет не так, с помощью этого кода + кода обратной связи в модели тичерс - не создается новый учитель-->
                    <field name="course_ids">
                        <tree string="Courses" editable="bottom">
                            <field name="name"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="academy_course_search" model="ir.ui.view">
        <field name="name">Academy courses: search</field>
        <field name="model">academy.courses</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/><!--<p>I wanna find u</p> - падает ошибка... почему?-->
                <field name="teacher_id"/>
            </search>
        </field>
    </record>
    <record id="academy_course_list" model="ir.ui.view">
        <field name="name">Academy courses: list</field>
        <field name="model">academy.courses</field>
        <field name="arch" type="xml">
            <tree string="Courses">
                <field name="name"/>
                <field name="teacher_id"/>
            </tree>
        </field>
    </record>
    <record id="academy_course_form" model="ir.ui.view">
        <field name="name">Academy courses: form</field>
        <field name="model">academy.courses</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <field name="name"/>
                    <label for="teacher_id"/>
                    <field name="teacher_id"/>
                </sheet>
                <!-- added "Discussions and notifications" but i can't see where
                 At the bottom of each course form, there is now a discussion thread-->
                <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <menuitem sequence="0" id="menu_academy" name="Academy_01"/>
    <menuitem id="menu_teachers" parent="menu_academy"
              name="Academy Teachers"/>
    <menuitem id="menu_courses" parent="menu_academy"
              name="Academy Courses"/>

    <menuitem id="menu_academy_content_courses"
              parent="menu_teachers"
              action="action_academy_courses"/><!-- parent отвечает за то в какое меню вкладываем нашу вкладку-->

    <menuitem id="menu_academy_content_teachers"
              parent="menu_teachers"
              action="action_academy_teachers"/>

    <menuitem id="menu_academy_content_courses_in_new_menuitem"
              parent="menu_courses"
              action="action_academy_courses"/>

</odoo>

